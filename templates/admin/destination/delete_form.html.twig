<form action="{{ path('admin_destination_delete', { id: destination.id }) }}"
      method="post"
      style="display:inline;"
      onsubmit="return confirm('Are you sure you want to delete this destination?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ destination.id) }}">
    <button class="btn btn-danger btn-sm" type="submit">{{ button_label|default('Delete') }}</button>
</form>
