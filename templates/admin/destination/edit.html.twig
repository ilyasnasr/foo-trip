{% extends 'admin/base.html.twig' %}

{% block title %}Edit Destination: {{ destination.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="mb-4">Edit Destination: {{ destination.name }}</h1>
                {% include 'admin/destination/form.html.twig' with { destination: destination } %}

                <div class="mt-3 d-flex justify-content-between">
                    <a href="{{ path('admin_destination_list') }}" class="btn btn-secondary">Back to List</a>
                    {% include 'admin/destination/delete_form.html.twig' with { destination: destination, button_label: 'Delete Destination' } %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
