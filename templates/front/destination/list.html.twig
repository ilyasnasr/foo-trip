{% extends 'front/base.html.twig' %}

{% block title %}Destinations{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="text-center mb-5">Explore Our Destinations</h1>

        {% if destinations %}
            <div class="row g-4">
                {% for destination in destinations %}
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="position-relative">
                                <img src="{{ asset('uploads/images/' ~ destination.image) }}"
                                     class="card-img-top"
                                     alt="{{ destination.name }}"
                                     style="height: 200px; object-fit: cover;"
                                >
                                <div class="badge bg-primary position-absolute top-0 end-0 m-2">
                                    ${{ destination.price|number_format(2) }}
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-truncate">{{ destination.name }}</h5>
                                <p class="card-text text-muted">
                                    {{ destination.description|slice(0, 100) ~ (destination.description|length > 100 ? '...' : '') }}
                                </p>
                                <a href="{{ path('front_destination_show', { id: destination.id }) }}"
                                   class="btn btn-outline-primary mt-auto">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center mt-5">
                <p class="text-muted">No destinations found.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
