{% extends 'front/base.html.twig' %}

{% block title %}{{ destination.name }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <a href="{{ path('front_destination_list') }}" class="btn btn-outline-secondary mb-4">
            <i class="bi bi-arrow-left"></i> Explore More Destinations
        </a>

        <div class="row gy-4">
            <div class="col-lg-6">
                <div class="border rounded shadow-sm overflow-hidden">
                    {% if destination.image starts with 'http' %}
                        <img
                                src="{{ destination.image }}"
                                class="img-fluid"
                                alt="{{ destination.name }}"
                                style="max-height: 400px; object-fit: cover; width: 100%;"
                        >
                    {% else %}
                        <img
                                src="{{ asset('uploads/images/' ~ destination.image) }}"
                                class="img-fluid"
                                alt="{{ destination.name }}"
                                style="max-height: 400px; object-fit: cover; width: 100%;"
                        >
                    {% endif %}
                </div>
            </div>

            <div class="col-lg-6">
                <h1 class="mb-3">{{ destination.name }}</h1>
                <p class="text-muted mb-4">
                    {{ destination.description }}
                </p>
                <div class="mb-3">
                    <span class="badge bg-primary py-2 px-3">
                        <strong>Price:</strong> ${{ destination.price|number_format(2, '.', ',') }}
                    </span>
                </div>
                <div class="mb-3">
                    <span class="badge bg-secondary py-2 px-3">
                        <strong>Duration:</strong> {{ destination.duration }}
                    </span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
